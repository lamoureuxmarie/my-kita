<div class="container pt-5">
  <h1 class="pt-5 text-center">Email templates</h1>
  <br>
  <% @templates.each do |template| %>
    <div class="bookmark-card">
      <h6><%= template.title %></h6>
      <p><%= truncate(template.content) %></p>
        <div class="links mt-3 d-flex justify-content-between">
          <a href="mailto:<%= @kita_email %>?subject=<%= template.title %>&body=<%= template.content %>" target=“_blank” rel=“noopener” class="btn btn-primary">Send</a>
          <div class="template-icons m-2">
            <%= link_to edit_template_path(template) do %>
              <%= image_tag "pencil.png", class: "image-icon" %>
            <% end %>
            <%= link_to template_path(template), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to DELETE you template?"} do %>
              <i class="fa-solid fa-trash"></i>
            <% end %>
          </div>
        </div>
    </div>
  <% end %>

  <%= link_to new_template_path do%>
    <button class="btn btn-primary mt-5 btn-width">New Template</button>
  <% end %>
    <%= link_to "Back to Bookmarks", bookmarks_path, class: "btn btn-secondary btn-width"%>
</div>
