<div class="homepage" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.3)), url(<%= asset_path 'bg-img.jpg' %>)">

  <h1>
    Make kindergarten happen
  </h1>

  <div class="form-container">
    <%= form_with url: kinder_gartens_path, method: :get do |f| %>
      <div class="row">
        <div class="col-12 d-flex search-container">
          <%# <%= text_field_tag :query, params[:query], class: "form-control",
              placeholder: "Address" %>
          <%= f.select :borough, KinderGarten::BOROUGH, {prompt: "Neighborhood"}, {class: "form-control"} %>
          <%= submit_tag "Search", class: "btn btn-primary search" %>
        </div>
          <!-- <%= f.select :distance, [['2km', 1], ['5km', 2], ['10km', 3]], {}, {class: "distance"} %> -->
          <!-- <small><%= link_to "Reset search", kinder_gartens_path %></small> -->
      </div>
      <div class="row filters d-none">
        <div class="col-6">
          <%= f.select :pedagogical_focus, [['Montessori', 1], ['Bilingual', 2], ['Nature', 3], ['Situational Approach', 4]] %>
        </div>
        <div class="col-6">
          <%= f.select :thematic_focus, [['Intercultural pedagogy', 1],['Music and art', 2], ['Integration of children with disabilities', 3], ['Body and movement', 4]] %>
        </div>
      </div>
    <% end %>
  </div>
</div>
