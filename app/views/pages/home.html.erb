<div class="container" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.3)), url(<%= asset_path 'bg-img.jpg' %>)">

  <div class="form-container">
    <%= form_with url: kinder_gartens_path, method: :get do |f| %>
      <div class="row">
        <div class="col-8">
          <%= text_field_tag :query, params[:query], class: "form-control",
              placeholder: "Address" %>
        </div>
        <div class="col-4">
          <%= submit_tag "Search", class: "button primary-button" %>
          <small><%= link_to "Reset search", kinder_gartens_path %></small>
        </div>
      </div>
      <%= f.select :pedagogical_focus, [['Montessori', 1], ['Bilingual', 2], ['Nature', 3], ['Situational Approach', 4]] %>
      <%= f.select :thematic_focus, [['Intercultural pedagogy', 1],['Music and art', 2], ['Integration of children with disabilities', 3], ['Body and movement', 4]] %>
    <% end %>
  </div>

  <h1>Hunt smarter, be happier</h1>

</div>
