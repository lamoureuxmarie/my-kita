<div class="index">
  <div>
    <img src="<%= @kinder_garten.image_url %>" alt="Kita's picture" class="kita-image">
  </div>
  <div class="container px-4 d-flex flex-column p-2">
    <%# <%= link_to "Go Back", :back, class: "back-link" %>
    <h1><%= @kinder_garten.name %></h1>
    <div class="descriptions">
      <p><%= @kinder_garten.address %></p>
      <p><%= @kinder_garten.email %></p>
      <p><%= @kinder_garten.phone_number %></p>
    </div>
    <br>
    <div>
      <h6>Opening hours</h6>
      <p><%= @kinder_garten.opening_time %> - <%= @kinder_garten.closing_time %></p>
    </div>
    <div>
      <h6>Pedagogical focus</h6>
      <p><%= @kinder_garten.pedagogical_focus %></p>
    </div>
    <div>
      <h6>Thematic focus</h6>
      <p><%= @kinder_garten.thematic_focus %></p>
    </div>
    <div data-controller="rating">
      <h6 class="review-count"><%= @ratings_count %> Reviews</h6>
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="ratings">
            <i class="fa fa-star <%= @ratings >= 1 ? "rating-color" : "" %>"></i>
            <i class="fa fa-star <%= @ratings >= 2 ? "rating-color" : "" %>"></i>
            <i class="fa fa-star <%= @ratings >= 3 ? "rating-color" : "" %>"></i>
            <i class="fa fa-star <%= @ratings >= 4 ? "rating-color" : "" %>"></i>
            <i class="fa fa-star <%= @ratings >= 5 ? "rating-color" : "" %>"></i>
        </div>
        <% if user_signed_in? %>
          <div class="pt-2">
            <button class="btn btn-secondary" data-action="click->rating#openForm">Add rating</button>
            <%# <%= link_to "Add rating", data: { action: 'click->rating#openForm' } %>
          </div>
        <% end %>
      </div>
      <%= render 'form', kinder_garten: @kinder_garten, rating: @rating %>
    </div>
    <div class="empty-div">
    </div>
    <div class="white-div">
      <% if current_user %>
        <div class="add-to-list-button" data-controller="alert" data-alert-redirect-url-value="<%= bookmarks_url %>">
          <%= link_to "Add to list", kinder_garten_bookmarks_path(@kinder_garten), data: { turbo_method: :post, action: 'click->alert#showAlert' } %>
        </div>
      <% else %>
        <div class="p-3 bg-light border info-login">
          To save this kita in your list, please
          <%= link_to "Log In", new_user_session_path, class: "link-warning" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
