<div class="container padding-top">
  <div class="form-control-login row justify-content-center">
    <div class="col-11">
      <div class="card-login-signup-form col-sm-12 col-lg-6 mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path 'login-banner.jpg' %>)">
        <p>Login</p>
      </div>
      <br>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs col-sm-12 col-lg-6 mb-3">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions col-sm-12 col-lg-6">
          <%= f.button :submit, "Log in", class: 'btn btn-primary btn-width' %>
        </div>
      <% end %>
      <div class="col-sm-12 col-lg-6 mb-3">
      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
